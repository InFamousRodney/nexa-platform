# Supabase connection (meestal niet nodig *binnen* functions, Supabase client gebruikt interne vars)
# SUPABASE_URL=http://localhost:54321
# SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key # Nodig voor admin acties

# Neo4j Connection
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Salesforce Connected App (vul later in na creatie)
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:54321/functions/v1/salesforce-auth/callback # Pas aan als nodig

# Encryption Key for Tokens
ENCRYPTION_KEY=generate_a_strong_random_32_byte_key_base64_encoded

# LLM API Key (vul later in)
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key