{
  "tasks": {
    "start": "deno run --allow-net --allow-env",
    "test": "deno test --allow-net --allow-env",
    "serve": "deno run --allow-net --allow-env --watch index.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "imports": {
    "@/shared/": "./functions/_shared/",
    "std/": "https://deno.land/std@0.208.0/",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.3"
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "checkJs": true,
    "lib": ["deno.window", "dom", "dom.iterable"],
    "types": ["deno"]
  }
}
