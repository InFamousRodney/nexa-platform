{
  "name": "nexa-platform-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "NEXA Salesforce Metadata Reasoning Platform",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "build:frontend": "pnpm --filter frontend build",
    "start:supabase": "cd apps/supabase && supabase start",
    "stop:supabase": "cd apps/supabase && supabase stop",
    "reset:db": "cd apps/supabase && supabase db reset",
    "generate:migration": "cd apps/supabase && supabase migration new",
    "lint": "pnpm --recursive run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tanstack/react-query": "^5.72.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^6.2.0",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@radix-ui/react-toast": "^1.2.7",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "tailwind-merge": "^3.2.0"
  }
}